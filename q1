#include <stdio.h>
#include <stdlib.h>

int main(){
int i;

//creating a double data index and setting up the average function


double average;
double sequence[6] = {57, 98, 23, 78, 46, -1};

//keeps program running until conditions are met

for(i=0; i<6; i++)

//produce the 3 averages required on output via a loop

{
    if(sequence[i+2]==-1)
        break;
        
    average = (sequence[i]+ sequence[i+1]+sequence[i+2])/3;
    printf("Average: %.1f\n", average);
}

//return 3 values?

return 3;

}
